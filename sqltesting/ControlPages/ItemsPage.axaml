<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="sqltesting.ItemsPage"
			 
			 >

	<Grid RowDefinitions="*, Auto">
		<DataGrid  DoubleTapped="DataGrid_DoubleTapped" IsReadOnly="True" Name="DataGridItems" Grid.Row="0">
			<DataGrid.Columns>
				<DataGridTextColumn Header="NameItem" Binding="{Binding NameItem}"/>
				<DataGridTextColumn Header="Cost" Binding="{Binding Cost}"/>
				<DataGridTextColumn Header="Desctiption" Binding="{Binding DescriptionItem}"/>

				<DataGridTemplateColumn Header="Delete" Width="50">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Button Click="DeleteButton_Click" Content="🗑️"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				
			</DataGrid.Columns>
		</DataGrid>
		<Button Content="Добавление" Grid.Row="1" Click="Button_Click"/>

	</Grid>
</UserControl>
